.hd-footer {
  width: 100%;
  background-color: #f0f4f5;
}
.hd-footer > .w1200 {
  width: 1200px;
  margin: 0 auto;
  padding-top: 52px;
  padding-bottom: 56px;
  position: relative;
}
.hd-footer > .w1200 > .left {
  float: left;
}
.hd-footer > .w1200 > .left > .list {
  margin-bottom: 70px;
}
.hd-footer > .w1200 > .left > .list > ul {
  float: left;
  margin-right: 70px;
}
.hd-footer > .w1200 > .left > .list > ul > .title {
  margin-bottom: 32px;
  font-size: 18px;
  color: #000;
  cursor: none;
}
.hd-footer > .w1200 > .left > .list > ul > li {
  margin-bottom: 15px;
  font-size: 14px;
  color: #5d5f5f;
  line-height: 1;
  cursor: pointer;
}
.hd-footer > .w1200 > .left > .bottom > p {
  line-height: 1;
}
.hd-footer > .w1200 > .left > .bottom > p > span {
  display: inline-block;
  font-size: 14px;
  line-height: 1;
  color: #5d5f5f;
  margin-right: 30px;
}
.hd-footer > .w1200 > .left > .bottom > .p-mb {
  margin-bottom: 14px;
}
.hd-footer > .w1200 > .right {
  position: absolute;
  right: 0;
}
.hd-footer > .w1200 > .right > li {
  float: left;
  width: 115px;
}
.hd-footer > .w1200 > .right > li > img {
  width: 100%;
  height: 125px;
  vertical-align: top;
  margin-bottom: 13px;
}
.hd-footer > .w1200 > .right > li > p {
  text-align: center;
  font-size: 14px;
  line-height: 24px;
  color: #878787;
}
.hd-footer > .w1200 > .right > .li-mr {
  margin-right: 38px;
}
