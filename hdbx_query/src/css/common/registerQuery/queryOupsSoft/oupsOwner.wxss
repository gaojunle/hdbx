.oups-owner {
  margin-top: 40px;
}
.oups-owner > li {
  padding-left: 30px;
  padding-top: 10px;
  border-top: 1px solid #cccccc;
}
.oups-owner > li > .title {
  font-size: 18px;
  margin-bottom: 10px;
}
.oups-owner > li > .owner-type {
  margin-left: 20px;
  margin-bottom: 30px;
}
.oups-owner > li > .owner-type > input {
  cursor: pointer;
}
.oups-owner > li > .owner-type > label {
  cursor: pointer;
  margin-right: 50px;
}
.oups-owner > li > .trunk {
  margin-left: 20px;
  margin-bottom: 20px;
  position: relative;
}
.oups-owner > li > .trunk > span {
  display: inline-block;
  width: 100px;
  margin-right: 10px;
  text-align: right;
}
.oups-owner > li > .trunk > input {
  width: 226px;
  height: 38px;
  outline: none;
  border: 1px solid #cccccc;
  text-indent: 10px;
}
.oups-owner > li > .trunk > .error {
  position: absolute;
  left: 360px;
  top: 10px;
  color: red;
}
