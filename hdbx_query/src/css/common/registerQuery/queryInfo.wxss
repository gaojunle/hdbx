.query-info {
  width: 100%;
  margin-bottom: 30px;
}
.query-info > .title {
  height: 50px;
  background-color: #f2f2f2;
  color: #333333;
  font-size: 20px;
  line-height: 50px;
  padding-left: 10px;
}
.query-info > ul > li {
  width: 900px;
  margin: 0 auto;
  padding-top: 20px;
  padding-bottom: 10px;
  border-bottom: 1px solid #c0c0c0;
}
.query-info > ul > li > div {
  float: left;
}
.query-info > ul > li > .title {
  font-size: 16px;
  font-weight: 700;
  line-height: 16px;
  margin-right: 10px;
}
.query-info > ul > li > .content > .text {
  width: 810px;
  line-height: 16px;
  margin-bottom: 10px;
}
.query-info > ul > li > .content > .text > span {
  float: left;
  margin-right: 10px;
  margin-bottom: 10px;
  line-height: 20px;
}
.query-info > ul > li > .trunk {
  float: none;
  margin-bottom: 10px;
}
.query-info > ul > li > .trunk > div {
  float: left;
}
.query-info > ul > li > .trunk > .title {
  width: 100px;
  margin-right: 10px;
  font-size: 16px;
  font-weight: 700;
  line-height: 16px;
  text-align: right;
}
.query-info > ul > li > .trunk > .small-title {
  font-weight: 400;
}
