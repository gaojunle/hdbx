.addressEdit {
  display: none;
  position: fixed;
  top: 0;
  bottom: 0;
  left: 0;
  right: 0;
  background-color: rgba(0, 0, 0, 0.4);
  z-index: 9999;
}
.addressEdit > .content {
  width: 800px;
  position: absolute;
  top: 160px;
  left: 0;
  right: 0;
  margin: 0 auto;
  background-color: #fff;
}
.addressEdit > .content > .title {
  width: 100%;
  height: 40px;
  margin-bottom: 20px;
  background-color: #e5e5e5;
}
.addressEdit > .content > .title > .title-left {
  float: left;
  line-height: 40px;
}
.addressEdit > .content > .title > .title-right {
  float: right;
  line-height: 40px;
  margin-right: 20px;
  cursor: pointer;
}
.addressEdit > .content > .trunk {
  margin-bottom: 30px;
  position: relative;
}
.addressEdit > .content > .trunk > span {
  display: inline-block;
  width: 80px;
  text-align: center;
}
.addressEdit > .content > .trunk > input {
  outline: none;
}
.addressEdit > .content > .trunk > textarea {
  width: 217px;
  height: 50px;
  resize: none;
  border: 1px solid #dcdfe6;
  outline: none;
  border-radius: 5px;
  font-size: 14px;
  line-height: 20px;
}
.addressEdit > .content > .trunk > .error {
  position: absolute;
  z-index: 5;
  font-size: 14px;
  line-height: 20px;
  color: #ff2553;
  bottom: -24px;
  left: 82px;
  padding-left: 6px;
  background-position: 0px -20px;
  background-size: 20px auto;
}
.addressEdit > .content > .trunk > .detailAddress {
  vertical-align: 38px;
}
.addressEdit > .content > .trunk > .tel-input {
  width: 300px;
  position: absolute;
  top: -10px;
  left: 82px;
}
.addressEdit > .content > .trunk > .codeBtn {
  cursor: pointer;
  color: #333333;
}
.addressEdit > .content > .trunk > .unClick {
  pointer-events: none;
  color: #999999;
}
.addressEdit > .content > .trunk > .left,
.addressEdit > .content > .trunk > .right {
  display: inline-block;
  width: 300px;
  height: 200px;
  text-align: center;
  line-height: 200px;
  background-color: pink;
  position: relative;
}
.addressEdit > .content > .trunk > .left {
  margin-right: 30px;
}
.addressEdit > .content > .trunk > .button {
  width: 200px;
  height: 50px;
  text-align: center;
  line-height: 50px;
  margin: 0 auto;
  background-color: #128BED;
  cursor: pointer;
}
.addressEdit > .content > .phone {
  height: 42px;
  margin-top: 40px;
}
.addressEdit > .content > .phone > .error {
  bottom: -18px;
}
.el-select-dropdown {
  z-index: 9999 !important;
}
.el-input--suffix,
.el-cascader {
  min-width: 300px;
}
.el-cascader-menus {
  z-index: 9999 !important;
}
