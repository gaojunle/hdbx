.handle-mode {
  width: 100%;
  position: relative;
}
.handle-mode > .title {
  height: 50px;
  background-color: #f2f2f2;
  color: #333333;
  font-size: 20px;
  line-height: 50px;
  padding-left: 10px;
}
.handle-mode > .title > span {
  font-size: 14px;
  color: red;
  margin-left: 10px;
}
.handle-mode > .handle-type {
  padding: 10px 0 20px 30px;
}
.handle-mode > .handle-type > li {
  float: left;
  margin-right: 150px;
  cursor: pointer;
}
.handle-mode > .handle-type > li > input {
  cursor: pointer;
}
.handle-mode > .handle-type > li > label {
  margin-left: 10px;
  font-size: 16px;
  color: #333333;
  cursor: pointer;
}
.handle-mode > .handle-type-child {
  padding: 10px 0 20px 50px;
  height: 60px;
}
.handle-mode > .handle-type-child > li {
  margin-bottom: 20px;
}
.handle-mode > .handle-type-child > li > input {
  cursor: pointer;
}
.handle-mode > .handle-type-child > li > label {
  cursor: pointer;
}
.handle-mode > .handle-type-child > li > label > .hall {
  display: inline-block;
  width: 300px;
}
.handle-mode > .disabled {
  position: absolute;
  top: 0;
  bottom: 0;
  left: 0;
  right: 0;
  background-color: rgba(0, 0, 0, 0.2);
}
