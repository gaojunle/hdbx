.query-soft {
  width: 100%;
  position: relative;
  padding-bottom: 30px;
}
.query-soft > .title {
  height: 40px;
  background-color: #f6f6f6;
  color: #000;
  font-size: 18px;
  line-height: 40px;
  padding-left: 38px;
}
.query-soft > ul {
  position: relative;
  padding-top: 18px;
}
.query-soft > ul > li {
  float: left;
  height: 36px;
  margin-bottom: 20px;
}
.query-soft > ul > li > input {
  float: left;
  outline: none;
  height: 34px;
  border: 1px solid #eeeeee;
  text-indent: 10px;
}
.query-soft > ul > li > span {
  float: left;
  height: 100%;
  line-height: 36px;
  margin-right: 12px;
}
.query-soft > ul > li > span > i {
  font-style: normal;
}
.query-soft > ul > li > .error {
  position: absolute;
  bottom: 0px;
  left: 38px;
  color: red;
}
.query-soft > ul > .error {
  position: absolute;
  bottom: 0px;
  left: 30px;
  margin-top: 6px;
  color: red;
}
.query-soft > ul > .register-number {
  margin-left: 38px;
  margin-right: 105px;
}
.query-soft > ul > .register-number > input {
  width: 182px;
}
.query-soft > ul > .soft-name > input {
  width: 238px;
}
.query-soft > ul > .owner-name {
  margin-left: 86px;
}
.query-soft > ul > .owner-name > input {
  width: 262px;
}
.query-soft > .query-soft-alert {
  position: fixed;
  top: 0;
  bottom: 0;
  left: 0;
  right: 0;
  background-color: rgba(0, 0, 0, 0.4);
  z-index: 99;
}
.query-soft > .query-soft-alert > .alert-box {
  position: absolute;
  top: 0;
  bottom: 0;
  left: 0;
  right: 0;
  width: 400px;
  height: 160px;
  background-color: #fff;
  margin: auto;
}
.query-soft > .query-soft-alert > .alert-box > .title {
  text-align: center;
  font-size: 20px;
  line-height: 1;
  margin: 40px;
}
.query-soft > .query-soft-alert > .alert-box > .button {
  width: 160px;
  height: 40px;
  margin: 0 auto;
  background-color: #169bd5;
  border-radius: 6px;
  text-align: center;
  line-height: 40px;
  color: #fff;
  cursor: pointer;
}
.query-soft > .disabled {
  position: absolute;
  top: 0;
  bottom: 0;
  left: 0;
  right: 0;
  background-color: rgba(0, 0, 0, 0.2);
}
